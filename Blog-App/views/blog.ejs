<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= blog.title %></title>
    <%-  include('./partials/head') %>
  </head>
  <body class="bg-dark-subtle">
    <%- include("./partials/navbar") %>
        <div class="container p-5">
            <div class="row">
                <div class="p-2 col-lg-6">
                    <img class="img-fluid rounded" src="<%= blog.coverImageUrl %>" width="600px" alt="">
                </div>

                <div class="p-2 col-lg-6">
                    <h3><%= blog.createdBy.fullname %></h3>
                </div>
            </div>
           
            <div class="p-2">
                <h1><%= blog.title %></h1>
            </div>

            <div class="p-2">
                <pre class="text-wrap text-justify"><%= blog.body %></pre>
            </div>

            <% if (locals.user) { %>
                <div>
                   
                    <div class="container mt-5">
                        
                        <form action="/blog/comment/<%= blog._id %>" method="post">
                        <div class="mb-3 ">
                          <label for="content" class="form-label"
                            >Add Comment </label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="content"
                            name="content"
                            placeholder="Comment"
                            required
                          />
                        </div>
                    
                        
                    
                        <div class="col-auto">
                            <button type="submit" class="btn btn-sm btn-primary mb-3">Submit</button> 
                        </div>
                      </form>
                        
                      </div>
                </div>
            <% } %>

            <div class="container mt-2">
                    <h3>Comments (<%= comments.length %>)</h3>
                   <div>
                    <% comments.forEach(comment => { %>
                        <img class="mx-2" src="<%= comment.createdBy.profileImageUrl %>" width="20px" alt="" srcset="">
                        <span><%= comment.createdBy.fullname %></span>
                        <p class="mt-1 ms-5"><%= comment.content %></p>
                    <% }) %>
                   </div>
            </div>
           

            
        </div>

        <%- include("./partials/footer") %>
    <%- include("./partials/script") %>
   
</body>
</html>